{
  "private": true,
  "sideEffects": false,
  "main": "./functions/index.js",
  "scripts": {
    "build": "remix build",
    "dev": "run-p emulators dev:remix",
    "dev:remix": "remix dev",
    "emulators": "firebase emulators:start --project healhty-food-2023-2024 --import=firebase-exported",
    "emulators:export": "firebase emulators:export --only=auth,firestore,storage ./firebase-exported",
    "start": "remix-serve build",
    "typecheck": "tsc",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 10 --cache-location ./node_modules/.cache/eslint .",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:run": "playwright test",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "validate": "run-p lint test:run"
  },
  "dependencies": {
    "@remix-run/node": "^1.17.0",
    "@remix-run/react": "^1.17.0",
    "@remix-run/serve": "^1.17.0",
    "firebase": "^9.22.2",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.3.1",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "remix-google-cloud-functions": "^0.1.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@playwright/test": "^1.36.1",
    "@remix-run/dev": "^1.17.1",
    "@remix-run/eslint-config": "^1.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-c8": "^0.32.2",
    "@vitest/ui": "^0.32.2",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "firebase-tools": "^12.4.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.8.4",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
